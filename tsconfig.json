{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "sig/dilithium": ["sig/dilithium"],
      "sig/falcon": ["sig/falcon"],
      "sig/sphincs": ["sig/sphincs"],
      "kem/mlkem": ["kem/mlkem"],
      "kem/frodokem": ["kem/frodokem"],
      "kem/classic_mceliece": ["kem/classic_mceliece"]
    },
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "noEmit": false
  },
  "include": ["src/**/*", "test/**/*.ts"]
}