{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noEmitOnError": true
  },
  "include": [
    "index.ts",
    "cli.ts",
    "kem/**/*.ts",
    "sig/**/*.ts",
    "test/**/*.ts"
  ]
}